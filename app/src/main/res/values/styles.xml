<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorLightDark</item>
        <item name="android:textColor">@color/colorLightDark</item>
        <item name="android:textColorSecondary">@color/colorLightDark</item>
        <item name="android:textColorTertiary">@color/colorLightDark</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="actionMenuTextColor">@color/colorLightDark</item>
        <item name="colorControlActivated">@color/colorLightDarkHint</item>
        <item name="colorControlHighlight">@color/colorLightDarkHint</item>
        <item name="android:panelColorBackground">@color/colorPrimary</item>
        <item name="android:panelBackground">@color/colorPrimary</item>
        <item name="android:panelColorForeground">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorLightDarkHint</item>

        <item name="materialButtonStyle">@style/MaterialTextButtonStyle</item>
        <item name="textInputStyle">@style/MaterialTextBoxStyleOutline</item>
        <item name="materialCardViewStyle">@style/MaterialCardViewStyle</item>
        <item name="materialButtonOutlinedStyle">@style/MaterialTextButtonOutlineStyle</item>
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
        <item name="alertDialogTheme">@style/AppDialogTheme</item>
        <item name="alertDialogStyle">@style/AppAlertDialog</item>
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog</item>

    </style>

    <style name="FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Define your custom dialog theme here extending from base -->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Define color properties as desired -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorLightDark</item>
        <!-- Define window properties as desired -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <!--    Material dialog them section-->
    <style name="MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSurface">@color/colorWhite</item>
        <item name="colorOnSurface">@color/colorWhite</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogTitleText</item>
    </style>

    <style name="MaterialAlertDialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorLightDark</item>
    </style>

    <style name="MaterialTextBoxStyleBoxLine" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:bottomLeftRadius">0dp</item>
        <item name="android:bottomRightRadius">0dp</item>
        <item name="android:topLeftRadius">0dp</item>
        <item name="android:topRightRadius">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeColor">@color/colorLightDark</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorLightDark</item>
        <item name="hintTextColor">@color/colorLightDarkHint</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:textAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorLightDark</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="endIconTint">@color/colorLightDark</item>
        <item name="startIconTint">@color/colorLightDark</item>
    </style>

    <style name="MaterialTextBoxStyleOutline" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:bottomLeftRadius">0dp</item>
        <item name="android:bottomRightRadius">0dp</item>
        <item name="android:topLeftRadius">0dp</item>
        <item name="android:topRightRadius">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/colorLightDark</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorLightDark</item>
        <item name="hintTextColor">@color/colorLightDarkHint</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:textAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorLightDark</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="endIconTint">@color/colorLightDark</item>
    </style>
    <!--   end of the input style here -->

    <!-- style for material button non-outlines-->
    <style name="MaterialTextButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:bottomLeftRadius">0dp</item>
        <item name="android:bottomRightRadius">0dp</item>
        <item name="android:topLeftRadius">0dp</item>
        <item name="android:topRightRadius">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="cornerRadius">22dp</item>
        <item name="backgroundTint">@color/accent_button_states</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- style for material button non-outlines-->
    <style name="MaterialTextButtonRoundedStyle" parent="MaterialTextButtonStyle">
        <item name="android:bottomLeftRadius">22dp</item>
        <item name="android:bottomRightRadius">22dp</item>
        <item name="android:topLeftRadius">22dp</item>
        <item name="android:topRightRadius">22dp</item>
        <item name="boxCornerRadiusBottomEnd">22dp</item>
        <item name="boxCornerRadiusBottomStart">22dp</item>
        <item name="boxCornerRadiusTopEnd">22dp</item>
        <item name="cornerRadius">22dp</item>
    </style>

    <!-- style for material button non-outlines-->
    <style name="ButtonWhiteRoundedStyle" parent="MaterialTextButtonStyle">
        <item name="android:bottomLeftRadius">15dp</item>
        <item name="android:bottomRightRadius">15dp</item>
        <item name="android:topLeftRadius">15dp</item>
        <item name="android:topRightRadius">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="backgroundTint">@color/white_button_states</item>
    </style>

    <!--  style for the material button outlined-->
    <style name="MaterialTextButtonOutlineStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>

    <!--    the card properties and style-->
    <style name="MaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="cardMaxElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/negative_item_margin</item>
        <item name="android:layout_marginRight">@dimen/negative_item_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!--    the card properties and style-->
    <style name="BaseCardViewStyle" parent="MaterialCardViewStyle">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="cardMaxElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/negative_item_margin</item>
        <item name="android:layout_marginRight">@dimen/negative_item_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- borderless button style-->
    <style name="MaterialBorderlessButtonStyle" parent="MaterialTextButtonOutlineStyle">
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!--    The text input style in the app -->
    <style name="ErrorText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorLightDarkHint</item>
    </style>

</resources>